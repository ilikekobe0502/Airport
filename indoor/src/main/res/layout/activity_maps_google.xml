<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/levelLabel"
        android:background="#ffffff"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"
        android:layout_width="@dimen/level_button_size"
        android:layout_height="@dimen/level_button_size" />

    <Button
        android:onClick="onButton"
        android:id="@+id/levelsButton"
        android:background="@drawable/levels"
        android:layout_alignParentRight="true"
        android:layout_above="@id/levelLabel"
        android:layout_marginRight="10dp"
        android:layout_width="@dimen/level_button_size"
        android:layout_height="@dimen/level_button_size" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:background="#ffffff"
        android:visibility="invisible"
        android:id="@+id/levelsPicker"
        android:layout_alignParentRight="true"
        android:layout_above="@id/levelLabel"
        android:layout_marginBottom="6dp"
        android:paddingRight="10dp"
        android:layout_width="48dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/routeBar"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Blue bar -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="#0070c0"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <ImageButton
                android:id="@+id/route_prev"
                android:onClick="onButton"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:onClick="onButton"
                android:id="@+id/stepLabel"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/route_text_size"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/route_next"
                android:scaleX="-1"
                android:onClick="onButton"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- White bar -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:id="@+id/descLabel"
                android:textColor="#000000"
                android:textSize="@dimen/route_text_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/routeTime"
                android:textColor="#000000"
                android:textSize="@dimen/route_text_size"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Thin line -->
        <View
            android:background="#0070c0"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>

    <Button
        android:onClick="onButton"
        android:id="@+id/navModeButton"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="32dp"
        android:layout_height="32dp" />

</RelativeLayout>