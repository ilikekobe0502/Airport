<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/info_header"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/info_margin_left"
                android:id="@+id/info_title"
                android:textColor="#000000"
                android:gravity="left"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/info_margin_left"
                android:layout_marginBottom="4dp"
                android:id="@+id/info_subtitle"
                android:textColor="#000000"
                android:gravity="left"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <FrameLayout
            android:background="#d9d9d9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_level"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="@dimen/info_margin_left"
                android:layout_marginBottom="4dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:src="@drawable/go_route"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/info_margin_left"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/info_directions"
                android:onClick="onDirections"
                android:background="@null"
                android:textSize="16dp"
                android:textColor="@color/button_color"
                android:textStyle="bold"
                android:text="@string/directions"
                android:textAllCaps="false"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_props"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="#a6a6a6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/info_logo"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</ScrollView>