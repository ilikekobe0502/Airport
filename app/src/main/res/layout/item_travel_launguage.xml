<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_pixel_16"
    android:paddingTop="@dimen/dp_pixel_16">

    <RelativeLayout
        android:id="@+id/layout_frame"
        android:layout_width="@dimen/dp_pixel_140"
        android:layout_height="@dimen/dp_pixel_80"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView_background"
            android:layout_width="@dimen/dp_pixel_140"
            android:layout_height="@dimen/dp_pixel_80"
            android:layout_centerVertical="true"
            android:src="@drawable/language_05_01_t" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_pixel_10"
            android:gravity="center"
            android:text="@string/conversation_general"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_pixel_16" />
    </RelativeLayout>
</RelativeLayout>