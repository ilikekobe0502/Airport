<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_pixel_10"
        android:layout_marginTop="@dimen/dp_pixel_25"
        android:gravity="center"
        android:text="@string/roaming_service_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_pixel_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_pixel_10"
        android:gravity="center"
        android:text="@string/roaming_service_des"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_pixel_14" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/layout_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>