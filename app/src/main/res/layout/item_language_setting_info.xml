<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/dp_pixel_16"
    android:paddingTop="@dimen/dp_pixel_16"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_pixel_75"
        android:layout_height="@dimen/dp_pixel_75"
        android:background="@drawable/language_setting_08_off" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxEms="4"
        android:maxLines="2"
        android:textSize="@dimen/sp_pixel_13"
        android:textColor="@android:color/white" />
</RelativeLayout>