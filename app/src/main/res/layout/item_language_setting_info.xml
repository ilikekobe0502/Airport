<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/dp_pixel_16"
    android:paddingTop="@dimen/dp_pixel_16"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_pixel_80"
        android:layout_height="@dimen/dp_pixel_80"
        android:background="@drawable/language_setting_08_off" />

    <com.whatmedia.ttia.utility.FontFitTextView
        android:id="@+id/textView_title"
        android:layout_width="@dimen/dp_pixel_70"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxEms="6"
        android:maxLines="2"
        android:textSize="@dimen/sp_pixel_15"
        android:textColor="@android:color/white"
        app:needResize="true"
        app:minTextSize="@dimen/sp_pixel_8"/>
</RelativeLayout>