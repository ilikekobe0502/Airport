<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/layout_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_pixel_20"
        android:layout_marginTop="@dimen/dp_pixel_20">

        <TextView
            android:id="@+id/textView_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_pixel_21" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_subtitle"
        android:layout_marginBottom="@dimen/dp_pixel_20"
        android:background="@color/colorFragmentLine" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_terminal"
        android:layout_width="@dimen/dp_pixel_250"
        android:layout_height="@dimen/dp_pixel_60"
        android:layout_below="@+id/line"
        android:layout_marginBottom="@dimen/dp_pixel_15"
        android:background="@drawable/input"
        android:drawableRight="@drawable/input_01"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_pixel_8"
        android:text="@string/restaurant_store_search_select_terminal"
        android:textColor="@color/colorTextStore"
        android:textSize="@dimen/sp_pixel_15" />

    <TextView
        android:id="@+id/textView_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_terminal"
        android:layout_marginBottom="@dimen/dp_pixel_15"
        android:background="@drawable/input"
        android:drawableRight="@drawable/input_01"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_pixel_8"
        android:text="@string/restaurant_store_search_select_area"
        android:textColor="@color/colorTextStore"
        android:textSize="@dimen/sp_pixel_15" />

    <TextView
        android:id="@+id/textView_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_area"
        android:layout_marginBottom="@dimen/dp_pixel_15"
        android:background="@drawable/input"
        android:drawableRight="@drawable/input_01"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_pixel_8"
        android:text="@string/restaurant_store_search_select_floor"
        android:textColor="@color/colorTextStore"
        android:textSize="@dimen/sp_pixel_15" />

    <TextView
        android:id="@+id/textView_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_floor"
        android:layout_marginBottom="@dimen/dp_pixel_15"
        android:background="@drawable/input"
        android:drawableRight="@drawable/input_01"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_pixel_8"
        android:text="@string/restaurant_store_search_select_kind_of_restaurant"
        android:textColor="@color/colorTextStore"
        android:textSize="@dimen/sp_pixel_15" />


    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="@dimen/dp_pixel_80"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_restaurant"
        android:layout_centerHorizontal="true"
        android:background="@drawable/but_bg">

        <ImageView
            android:id="@+id/imageView_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/magnifier" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView_search"
            android:text="@string/flights_search_search"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_pixel_18" />
    </RelativeLayout>
</RelativeLayout>