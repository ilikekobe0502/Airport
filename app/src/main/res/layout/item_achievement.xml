<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_all"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_pixel_100"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/achievement_11_02"
            android:layout_margin="@dimen/dp_pixel_10"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAchievementDate"
            android:text="2017/02/06"
            android:textSize="@dimen/dp_pixel_16"
            android:layout_marginTop="@dimen/dp_pixel_10"
            android:layout_marginBottom="@dimen/dp_pixel_10"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextFinal"
            android:textSize="@dimen/dp_pixel_16"
            android:text="大門成就"
            android:paddingBottom="@dimen/dp_pixel_10"
            android:layout_marginRight="@dimen/dp_pixel_10"/>


    </LinearLayout>

</LinearLayout>