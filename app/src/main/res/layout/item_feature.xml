<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_pixel_16"
    android:paddingTop="@dimen/dp_pixel_16">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="@dimen/dp_pixel_80"
        android:layout_height="@dimen/dp_pixel_80"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxEms="8"
        android:maxLines="2"
        android:textColor="@color/colorTextFinal"
        android:textSize="@dimen/sp_pixel_13" />
</RelativeLayout>