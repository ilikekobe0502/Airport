<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_pixel_45"
    android:background="@color/colorMarquee"
    android:paddingLeft="@dimen/dp_pixel_10">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/marquee_new"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textView_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_pixel_10"
        android:layout_toRightOf="@+id/imageView_icon"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="-1"
        android:maxLines="1"
        android:text="開車到機場的朋友有福了開車到機場的朋友有福了開車到機場的朋友有福了開車到機場的朋友有福了開車到機場的朋友有福了開車到機場的朋友有福了"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_pixel_13" />
</RelativeLayout>