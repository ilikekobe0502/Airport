<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundHomeDeparture"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text_query"
        android:layout_marginLeft="@dimen/dp_pixel_15"
        android:layout_marginRight="@dimen/dp_pixel_15"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_pixel_183"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_pixel_20"
            android:layout_marginTop="@dimen/dp_pixel_20"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imageDetailView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_pixel_183"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_pixel_15"
        android:layout_marginLeft="@dimen/dp_pixel_90"
        android:layout_marginRight="@dimen/dp_pixel_90"
        android:layout_marginTop="@dimen/dp_pixel_15"
        android:background="@drawable/but01_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_pixel_15"
        android:paddingTop="@dimen/dp_pixel_15"
        android:text="@string/roaming_detail_query"
        android:textColor="@color/colorTextDefault"
        android:textSize="@dimen/sp_pixel_21" />

</RelativeLayout>