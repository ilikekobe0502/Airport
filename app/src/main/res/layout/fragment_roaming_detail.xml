<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:clickable="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_pixel_100"
        android:layout_marginTop="@dimen/dp_pixel_80"
        android:layout_height="@dimen/dp_pixel_183" />

    <TextView
        android:id="@+id/text_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_pixel_30"
        android:layout_marginLeft="@dimen/dp_pixel_90"
        android:layout_marginRight="@dimen/dp_pixel_90"
        android:layout_marginTop="@dimen/dp_pixel_30"
        android:background="@drawable/but_bg_mdpi"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_pixel_15"
        android:paddingTop="@dimen/dp_pixel_15"
        android:text="@string/roaming_detail_query"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_pixel_21" />

</RelativeLayout>