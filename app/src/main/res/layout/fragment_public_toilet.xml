<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/layout_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_pixel_20"
        android:layout_marginTop="@dimen/dp_pixel_20">

        <TextView
            android:id="@+id/textView_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_pixel_21" />

        <ImageView
            android:id="@+id/imageView_left"
            android:layout_width="@dimen/dp_pixel_30"
            android:layout_height="@dimen/dp_pixel_30"
            android:layout_marginRight="@dimen/dp_pixel_16"
            android:layout_toLeftOf="@+id/imageView_right"
            android:background="@drawable/left_on" />

        <ImageView
            android:id="@+id/imageView_right"
            android:layout_width="@dimen/dp_pixel_30"
            android:layout_height="@dimen/dp_pixel_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_pixel_10"
            android:background="@drawable/right_off" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_subtitle" />
