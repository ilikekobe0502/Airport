<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_pixel_20"
        android:gravity="center"
        android:text="2017/02/06"
        android:textColor="@color/colorDateDefault"
        android:textSize="@dimen/sp_pixel_16" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_pixel_15"
        android:gravity="center"
        android:text="這是測試標題"
        android:textColor="@color/colorTextDefault"
        android:textSize="@dimen/sp_pixel_18" />

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/dp_pixel_223"
        android:layout_height="@dimen/dp_pixel_145"
        android:layout_below="@+id/text_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_pixel_15"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_icon"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_pixel_15"
        android:gravity="center|left"
        android:text="這是測試標題"
        android:textColor="@color/colorTextDefault"
        android:textSize="@dimen/sp_pixel_16" />

</RelativeLayout>