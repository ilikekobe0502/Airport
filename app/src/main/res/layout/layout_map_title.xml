<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_frame"
        android:layout_width="@dimen/dp_pixel_130"
        android:layout_height="@dimen/dp_pixel_130"
        android:background="@drawable/parking_info_04_01_01txt_1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextParkingMuch"
                android:textSize="@dimen/sp_pixel_30" />

            <TextView
                android:id="@+id/textView_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/line"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textView_name"
                android:textColor="@color/colorTextParkingMuch"
                android:textSize="@dimen/sp_pixel_15" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/textView_count"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_pixel_30"
            android:background="@color/colorTextParkingMuch" />

        <TextView
            android:id="@+id/textView_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:text="@string/parking_remain"
            android:textColor="@color/colorTextParkingMuch"
            android:textSize="@dimen/sp_pixel_12" />

        <TextView
            android:id="@+id/textView_count"
            android:paddingTop="@dimen/dp_pixel_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorTextParkingMuch"
            android:textSize="@dimen/sp_pixel_30" />
    </RelativeLayout>
</RelativeLayout>