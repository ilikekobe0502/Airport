<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundHomeArrive"
    android:clickable="true">

    <EditText
        android:id="@+id/editText_search"
        android:layout_width="@dimen/dp_pixel_330"
        android:layout_height="@dimen/dp_pixel_50"
        android:layout_above="@+id/layout_search"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_background"
        android:hint="@string/flights_search_edit_text_hint"
        android:paddingLeft="@dimen/dp_pixel_10"
        android:textColor="@color/colorHomeLeftTitle"
        android:textColorHint="@color/colorHomeLeftTitle"
        android:textSize="@dimen/sp_pixel_15" />

    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="@dimen/dp_pixel_87"
        android:layout_height="@dimen/dp_pixel_50"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_pixel_30"
        android:layout_marginTop="@dimen/dp_pixel_30"
        android:background="@drawable/frame_dialog_button">

        <ImageView
            android:id="@+id/imageView_search"
            android:layout_width="@dimen/dp_pixel_29"
            android:layout_height="@dimen/dp_pixel_33"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_pixel_10"
            android:background="@drawable/magnifier" />

        <com.whatsmedia.ttia.utility.FontFitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_pixel_10"
            android:layout_toRightOf="@+id/imageView_search"
            android:text="@string/flights_search_search"
            android:textColor="@color/colorHomeLeftTitle"
            android:textSize="@dimen/sp_pixel_18" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_search"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_pixel_16"
        android:layout_marginRight="@dimen/dp_pixel_16"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_pixel_20"
        android:text="@string/flights_search_footer_hint"
        android:textColor="@color/colorHomeLeftTitle"
        android:textSize="@dimen/sp_pixel_18" />
</RelativeLayout>