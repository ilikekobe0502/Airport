<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_frame"
    android:layout_width="@dimen/dp_pixel_350"
    android:layout_height="@dimen/dp_pixel_60"
    android:background="@drawable/flight_bg">

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="@dimen/dp_pixel_47"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp_pixel_12" />

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/textView_time"
        android:background="@color/colorFlightsLine" />

    <RelativeLayout
        android:id="@+id/layout_logo"
        android:layout_width="@dimen/dp_pixel_50"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/line1">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="@dimen/dp_pixel_38"
            android:layout_height="@dimen/dp_pixel_38"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/layout_logo"
        android:background="@color/colorFlightsLine" />


    <LinearLayout
        android:id="@+id/layout_flights_info"
        android:layout_width="@dimen/dp_pixel_145"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/line2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_pixel_8">

        <TextView
            android:id="@+id/textView_flight_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_pixel_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecond"
            android:textSize="@dimen/sp_pixel_14" />
    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/layout_flights_info"
        android:background="@color/colorFlightsLine" />

    <TextView
        android:id="@+id/textView_state"
        android:layout_width="@dimen/dp_pixel_56"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/line4"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp_pixel_13"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout_terminal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/textView_state"
        android:background="@drawable/bg_flight_gate">

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/colorFlightsLine" />

        <TextView
            android:id="@+id/textView_terminal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line3"
            android:layout_marginStart="@dimen/dp_pixel_2"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_pixel_14"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_gate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_pixel_2"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_pixel_14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView_icon"
                android:layout_width="@dimen/dp_pixel_19"
                android:layout_height="@dimen/dp_pixel_21"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_pixel_2" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>